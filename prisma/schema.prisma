generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Student {
  id       String @id @default(cuid())
  name     String
  email    String @unique
  password String
  reg_no   String @unique
  role     String @default("Student")
}

model Administrator {
  id        String @id @default(cuid())
  name      String
  email     String @unique
  auth_code String @unique
  role      String @default("Admin")
}

model Teacher {
  id       String @id @default(cuid())
  name     String
  email    String @unique
  password String
  staff_no String @unique
  role     String @default("Teacher")
}
