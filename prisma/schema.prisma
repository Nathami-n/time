generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Student {
  id       String @id @default(cuid())
  name     String
  email    String @unique
  password String
  reg_no   String @unique
  role     String @default("Student")
}

model Administrator {
  id        String @id @default(cuid())
  name      String
  email     String @unique
  auth_code String @unique
  role      String @default("Admin")
}

model Teacher {
  id           String      @id @default(cuid())
  name         String
  email        String      @unique
  password     String
  unitId       String
  unit         Unit        @relation(fields: [unitId], references: [id])
  departmentId String?
  department   Department? @relation(fields: [departmentId], references: [id])
  staff_no     String      @unique
  role         String      @default("Teacher")
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  Department   Department? @relation("headship")
}

model Unit {
  id           String     @id @default(cuid())
  name         String
  unit_code    String     @unique
  departmentId String
  department   Department @relation(fields: [departmentId], references: [id], onDelete: Cascade)
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  Teacher      Teacher[]
}

model Department {
  id               String    @id @default(cuid())
  name             String @unique
  established      DateTime
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  departmentHeadId String?   @unique
  departmentHead   Teacher?  @relation("headship", fields: [departmentHeadId], references: [id])
  Unit             Unit[]
  Teacher          Teacher[]
}
